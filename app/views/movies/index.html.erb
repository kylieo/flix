<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<ul>
	<% @movies.each do |movie| %>
	<li>
		<strong><%= movie.title %></strong>(<%= movie.rating %>)
		<%= movie.total_gross %>
	</li>
	<p>
  		<%= truncate(movie.description, length: 40, separator: ' ') %>
	</p>
	<p>
  		<%= movie.released_on %>
	</p>
		<% end %> 
</ul>